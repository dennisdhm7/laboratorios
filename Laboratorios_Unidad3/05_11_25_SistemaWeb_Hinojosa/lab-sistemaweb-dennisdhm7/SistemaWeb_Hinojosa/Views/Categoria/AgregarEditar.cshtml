@model SistemaWeb_Hinojosa.Models.Categoria

@{
    ViewBag.Title = "Agregar o Editar Categoría";
}

<h2>@(Model.id_categ > 0 ? "Editar Categoría" : "Nueva Categoría")</h2>

<ol class="breadcrumb">
    <li><a href="~/categoria/index">Categorías</a></li>
    <li class="breadcrumb-item active">
        @(Model.id_categ > 0 ? Model.nombre : "Nuevo registro")
    </li>
</ol>

<div class="card">
    <div class="card-header">
        <div class="card-title">Información de la categoría</div>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Guardar", "Categoria", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.id_categ)

            <div class="form-group">
                @Html.LabelFor(x => x.id_categ, "ID")
                @Html.TextBoxFor(x => x.id_categ, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.nombre, "Categoría")
                @Html.TextBoxFor(x => x.nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.nombre, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.descripcion, "Descripción")
                @Html.TextAreaFor(x => x.descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.descripcion, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.estado, "Estado")
                @Html.DropDownListFor(x => x.estado,
                    new SelectList(new[]
                    {
                        new { Value = "A", Text = "Activo" },
                        new { Value = "I", Text = "Inactivo" }
                    }, "Value", "Text", Model.estado),
                    "Seleccione un estado",
                    new { @class = "form-control" })
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="~/categoria/index" class="btn btn-secondary">Cancelar</a>
            </div>
        }
    </div>
</div>
