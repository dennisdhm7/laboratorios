@model PracticaCalifica_ChristianHinojosa.Models.Atencion

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Registrar Nueva Atención</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card p-4">

        <div class="form-group">
            <label>Semestre</label>
            @Html.TextBoxFor(model => model.Semestre, new { @class = "form-control", placeholder = "Ej: 2025-I" })
        </div>

        <div class="form-group mt-3">
            <label>Fecha de Atención</label>
            @Html.TextBoxFor(model => model.FechaAtencion, new { @class = "form-control", type = "datetime-local" })
        </div>

        <div class="form-group mt-3">
            <label>Docente</label>
            @Html.DropDownList("DocenteId", null, "Seleccione docente", new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Estudiante</label>
            @Html.DropDownList("EstudianteId", null, "Seleccione estudiante", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tema, "Tema de Atención", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.Tema,
                (IEnumerable<SelectListItem>)ViewBag.Temas,
                "-- Seleccione un tema --",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Tema, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mt-3">
            <label>Consulta del estudiante</label>
            @Html.TextAreaFor(model => model.Consulta, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group mt-3">
            <label>Descripción de la atención</label>
            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group mt-3">
            <label>Evidencia</label>
            @Html.TextAreaFor(model => model.Evidencia, new { @class = "form-control", rows = 3 })
        </div>

        <button type="submit" class="btn btn-success mt-4">Guardar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary mt-4">Cancelar</a>

    </div>
}
