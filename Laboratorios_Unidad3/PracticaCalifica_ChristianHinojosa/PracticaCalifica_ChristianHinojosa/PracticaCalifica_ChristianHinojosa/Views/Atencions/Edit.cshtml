@model PracticaCalifica_ChristianHinojosa.Models.Atencion

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Editar Atención</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card p-4">

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label>Semestre</label>
            @Html.TextBoxFor(model => model.Semestre, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Fecha de Atención</label>
            @Html.TextBoxFor(model => model.FechaAtencion, new { @class = "form-control", type = "datetime-local" })
        </div>

        <div class="form-group mt-3">
            <label>Docente</label>
            @Html.DropDownList("DocenteId", null, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Estudiante</label>
            @Html.DropDownList("EstudianteId", null, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Tema</label>
            @Html.TextBoxFor(model => model.Tema, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Consulta</label>
            @Html.TextAreaFor(model => model.Consulta, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group mt-3">
            <label>Descripción</label>
            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group mt-3">
            <label>Evidencia</label>
            @Html.TextAreaFor(model => model.Evidencia, new { @class = "form-control", rows = 3 })
        </div>

        <button type="submit" class="btn btn-warning mt-4">Guardar cambios</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary mt-4">Cancelar</a>
    </div>
}
