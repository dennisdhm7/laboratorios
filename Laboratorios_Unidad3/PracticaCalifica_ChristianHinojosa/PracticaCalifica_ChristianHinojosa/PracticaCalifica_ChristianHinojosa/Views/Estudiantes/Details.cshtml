@model PracticaCalifica_ChristianHinojosa.Models.Estudiante

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Detalles del Estudiante</h2>

<div class="card p-4">

    <p><strong>Código:</strong> @Model.Codigo</p>
    <p><strong>Apellidos:</strong> @Model.Apellidos</p>
    <p><strong>Nombres:</strong> @Model.Nombres</p>
    <p><strong>Correo:</strong> @Model.Correo</p>
    <p><strong>Activo:</strong> @(Model.Activo ? "Sí" : "No")</p>

    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning mt-3">Editar</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Volver</a>

</div>
