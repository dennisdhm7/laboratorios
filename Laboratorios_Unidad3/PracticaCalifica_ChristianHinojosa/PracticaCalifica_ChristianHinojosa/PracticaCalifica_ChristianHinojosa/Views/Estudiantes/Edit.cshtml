@model PracticaCalifica_ChristianHinojosa.Models.Estudiante

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Editar Estudiante</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="card p-4">

        <div class="form-group">
            <label>Código</label>
            @Html.TextBoxFor(model => model.Codigo, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Apellidos</label>
            @Html.TextBoxFor(model => model.Apellidos, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Nombres</label>
            @Html.TextBoxFor(model => model.Nombres, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Correo</label>
            @Html.TextBoxFor(model => model.Correo, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Activo</label><br />
            @Html.CheckBoxFor(model => model.Activo)
        </div>

        <button type="submit" class="btn btn-warning mt-4">Guardar Cambios</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary mt-4">Cancelar</a>
    </div>
}
