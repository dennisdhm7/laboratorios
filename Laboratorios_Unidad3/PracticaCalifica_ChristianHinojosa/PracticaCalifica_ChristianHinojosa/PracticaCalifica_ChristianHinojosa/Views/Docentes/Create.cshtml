@model PracticaCalifica_ChristianHinojosa.Models.Docente

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Registrar Docente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card p-4">
        <div class="form-group">
            <label>Apellidos</label>
            @Html.TextBoxFor(model => model.Apellidos, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Nombres</label>
            @Html.TextBoxFor(model => model.Nombres, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Correo Corporativo</label>
            @Html.TextBoxFor(model => model.CorreoCorporativo, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">
            <label>Activo</label>
            @Html.CheckBoxFor(model => model.Activo)
        </div>

        <button type="submit" class="btn btn-success mt-4">Guardar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary mt-4">Cancelar</a>
    </div>
}
